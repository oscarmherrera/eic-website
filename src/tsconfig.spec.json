    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "../out-tsc/spec",
    "module": "commonjs",
    "target": "ES2022",
    "baseUrl": "",
    "types": [
      "jasmine",
      "node"
    ],
